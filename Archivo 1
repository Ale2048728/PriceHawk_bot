```python
import os
import logging
from telegram import Update
from telegram.ext import Application, CommandHandler, MessageHandler, filters, ContextTypes

# Configurar logging
logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)

# El token vendrÃ¡ de las variables de entorno
TOKEN = os.environ.get("BOT_TOKEN")

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """Maneja el comando /start"""
    user = update.message.from_user
    await update.message.reply_text(
        f'ğŸ¦… Â¡Hola {user.first_name}! Soy **Price Hawk**\n\n'
        'ğŸ“¦ **Tu cazador de ofertas personalizado**\n\n'
        '**Â¿CÃ³mo funciona?**\n'
        '1. ğŸ“¤ EnvÃ­ame un enlace de Amazon\n'
        '2. ğŸ’° Dime a quÃ© precio quieres que te avise\n'
        '3. ğŸ”” Â¡Te notificarÃ© cuando baje!\n\n'
        'Â¡EnvÃ­a un enlace para comenzar!'
    )

async def handle_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """Maneja los mensajes de texto"""
    user_text = update.message.text
    user_id = update.message.from_user.id
    
    # Si es un enlace de producto
    if 'amazon' in user_text.lower() or 'mercadolibre' in user_text.lower():
        context.user_data['pending_url'] = user_text
        await update.message.reply_text(
            'âœ… Â¡Enlace guardado! Â¿A quÃ© precio quieres que te avise?\n'
            '**Ejemplo:** 1500 o 299.99'
        )
    
    # Si es un nÃºmero (precio)
    elif user_text.replace('.', '').replace(',', '').isdigit():
        if 'pending_url' in context.user_data:
            precio = float(user_text.replace(',', '.'))
            url = context.user_data['pending_url']
            
            # AquÃ­ guardarÃ­amos en base de datos (lo implementaremos despuÃ©s)
            logger.info(f"Usuario {user_id} guardÃ³: {url} a precio ${precio}")
            
            await update.message.reply_text(
                f'ğŸ¯ **Â¡Configurado!**\n\n'
                f'Te avisarÃ© cuando el producto baje de **${precio:.2f}**\n\n'
                f'Puedes agregar mÃ¡s productos enviando otro enlace.'
            )
            del context.user_data['pending_url']
        else:
            await update.message.reply_text('Primero envÃ­a un enlace de producto')
    else:
        await update.message.reply_text(
            'Â¡Hola! ğŸ‘‹\n\n'
            'Para comenzar, envÃ­ame un enlace de:\n'
            'â€¢ ğŸ“¦ Amazon\n' 
            'â€¢ ğŸ›’ Mercado Libre\n\n'
            'Y te ayudo a monitorear el precio.'
        )

async def error_handler(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """Maneja errores"""
    logger.error(f"Error: {context.error}")

def main():
    """FunciÃ³n principal"""
    if not TOKEN:
        logger.error("âŒ No se encontrÃ³ BOT_TOKEN en variables de entorno")
        return
    
    # Crear aplicaciÃ³n
    application = Application.builder().token(TOKEN).build()
    
    # Manejar comandos
    application.add_handler(CommandHandler("start", start))
    application.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, handle_message))
    
    # Manejar errores
    application.add_error_handler(error_handler)
    
    # Iniciar bot
    logger.info("ğŸ¤– Price Hawk iniciado...")
    application.run_polling()

if __name__ == '__main__':
    main()
```
